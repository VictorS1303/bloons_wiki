  {
    img: "/images/bloons/blue_bloon.webp",
    alt: "blue bloon",
  },
  {
    img: "/images/bloons/red_bloon.webp",
    alt: "blue bloon",
  },
  {
    img: "/images/bloons/green_bloon.webp",
    alt: "blue bloon",
  },
  {
    img: "/images/bloons/yellow_bloon.webp",
    alt: "blue bloon",
  },
  {
    img: "/images/bloons/extra_dart_bloon.webp",
    alt: "blue bloon",
  },
  {
    img: "/images/bloons/helium_bloon.webp",
    alt: "blue bloon",
  },
  {
    img: "/images/bloons/ice_bloon.webp",
    alt: "blue bloon",
  },
  {
    img: "/images/bloons/laser_bloon.webp",
    alt: "blue bloon",
  },
  {
    img: "/images/bloons/mine_bloon.webp",
    alt: "blue bloon",
  },
]

const cards = [
  {
    src: "/images/games/bloons.webp",
    alt: "bloons",
    href: "/walkthroughs/bloons",
    cardText: "Bloons",
  },
  {
    src: "/images/games/more_bloons.webp",
    alt: "more bloons",
    href: "/walkthroughs/more-bloons",
    cardText: "More Bloons",
  },
  {
    src: "/images/games/even_more_bloons.webp",
    alt: "even more bloons",
    href: "/walkthroughs/even-more-bloons",
    cardText: "Even More Bloons",
  },
  {
    src: "/images/games/bloons_pp1.webp",
    alt: "bloons player pack one",
    href: "/walkthroughs/bloons-player-pack-one",
    cardText: "Bloons Player Pack 1",
  },
  {
    src: "/images/games/bloons_pp2.webp",
    alt: "bloons player pack two",
    href: "/walkthroughs/bloons-player-pack-2",
    cardText: "Bloons Player Pack 2",
  },
  {
    src: "/images/games/bloons_pp3.webp",
